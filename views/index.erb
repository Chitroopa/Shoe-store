<div class="jumbotron">
  <h1>Below are the list of stores</h1><br>
  <% if @stores.any?() %>
    <ul>
      <% @stores.each() do |store| %>
        <li><a href="/stores/view/<%= store.id() %>"><%= store.name() %></a></li>
      <% end %>
    </ul>
  <% else %>
    <h4>No stores yet</h4>
  <% end %>
</div>
